    <script>
        // Device selection functionality
        function selectDevice(deviceType) {
            // Hide device selection
            document.getElementById('deviceSelection').style.display = 'none';
            
            // Remove selected class from all options
            document.getElementById('androidOption').classList.remove('selected');
            document.getElementById('iosOption').classList.remove('selected');
            
            // Show the appropriate offer based on device type
            if (deviceType === 'android') {
                document.getElementById('androidOption').classList.add('selected');
                document.getElementById('androidOffer').classList.add('active');
                document.getElementById('iosOffer').classList.remove('active');
            } else if (deviceType === 'ios') {
                document.getElementById('iosOption').classList.add('selected');
                document.getElementById('iosOffer').classList.add('active');
                document.getElementById('androidOffer').classList.remove('active');
            }
            
            // Scroll to the offer section
            document.querySelector('.offer-display.active').scrollIntoView({ 
                behavior: 'smooth',
                block: 'start'
            });
        }
        
        // Back to device selection
        function goBackToSelection() {
            // Hide all offer displays
            document.getElementById('androidOffer').classList.remove('active');
            document.getElementById('iosOffer').classList.remove('active');
            
            // Show device selection
            document.getElementById('deviceSelection').style.display = 'block';
            
            // Scroll back to device selection
            document.getElementById('deviceSelection').scrollIntoView({ 
                behavior: 'smooth',
                block: 'start'
            });
        }
        
        // Auto-select device based on user agent (optional)
        window.addEventListener('DOMContentLoaded', function() {
            const userAgent = navigator.userAgent.toLowerCase();
            
            // Check if user is on mobile device
            const isMobile = /android|webos|iphone|ipad|ipod|blackberry|iemobile|opera mini/i.test(userAgent);
            
            if (isMobile) {
                // Auto-select based on device type
                if (/iphone|ipad|ipod/.test(userAgent)) {
                    // iOS device
                    setTimeout(() => {
                        selectDevice('ios');
                    }, 1500);
                } else if (/android/.test(userAgent)) {
                    // Android device
                    setTimeout(() => {
                        selectDevice('android');
                    }, 1500);
                }
            }
            
            // Add click tracking for affiliate links
            document.querySelectorAll('.cta-button').forEach(button => {
                button.addEventListener('click', function() {
                    const deviceType = this.classList.contains('android-button') ? 'Android' : 'iOS';
                    console.log(`Affiliate link clicked for ${deviceType} offer`);
                    // Here you can add analytics tracking code
                });
            });
        });
    </script>
